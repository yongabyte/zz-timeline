{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }

  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/lib/chronoItemBuilder.ts"],
  "exclude": ["node_modules"]
}
